{% extends 'BaseBundle::/Default/base.html.twig' %}

{% trans_default_domain 'BaseBundle' %}

{% block header %}
    <meta name="title" content="MisBeans. Juegos de economía experimental">
    <meta name="description" content="Juegos de economía experimental - TFG GII UBU">
    <title>MisBeans</title>
{% endblock header %}

{% block navbar %}
    {% include "BaseBundle::/Includes/navbar-unregistered.html.twig" %}
{% endblock navbar %}
{% block body %}
    <div class="full-section container-fluid">
        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <div class="col-lg-6 col-lg-offset-3">
            <div class="row vert-middle">
                <div class="col-xs-12 col-lg-6">
                    <form class="form-group" action="{{ path("fos_user_security_check") }}" method="post">
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>

                        <div class="form-group">
                            <label for="username">{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}</label>

                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-user fa-fw"></i></span>
                                <input class="form-control" type="text" id="username" name="_username"
                                       value="{{ last_username }}"
                                       required="required"/>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="password">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label>

                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-key fa-fw"></i></span>
                                <input class="form-control" type="password" id="password" name="_password"
                                       required="required"/>
                            </div>
                        </div>
                        <div class="form-group">
                            <input type="checkbox" id="remember_me" name="_remember_me" value="on"/>
                            <label for="remember_me">{{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}</label>

                            <div class="pull-right">
                                <input class="btn btn-default btn-lg
                            " type="submit" id="_submit" name="_submit"
                                       value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}"/>
                            </div>
                        </div>
                    </form>
                    <a href="{{ path('registration') }}">{{ 'global.register'|trans({}, 'BaseBundle') }}</a>
                </div>
                <div class="col-xs-12 col-lg-6 text-center">
                    <img src="{{ asset('img/logos/ubu.gif') }}" alt="UBU logo">
                </div>
            </div>
        </div>
    </div>
{% endblock body %}

{% block footer %}
    {% include "BaseBundle::/Includes/footer-unregistered.html.twig" %}
{% endblock footer %}